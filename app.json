{
  "expo": {
    "name": "Hoopay Wallet",
    "slug": "hoopay",
    "owner": "hoopaywallet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/ic_launcher.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "scheme": "hoopay",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "sdkVersion": "51.0.0",
    "splash": {
      "image": "./assets/splashicon.png",
      "resizeMode": "contain",
      "backgroundColor": "#4CAF50"
    },
    "ios": {
      "icon": "./assets/ic_launcher.png",
      "supportsTablet": true,
      "bundleIdentifier": "com.hoopay.wallet",
      "googleServicesFile": "./GoogleService-Info.plist",
      "deploymentTarget": "15",
      "infoPlist": {
        "CFBundleName": "Hoopay Wallet",
        "CFBundleDisplayName": "Hoopay Wallet",
        "NSFaceIDUsageDescription": "Use Face ID to quickly and securely access your Hoopay Wallet account.",
        "NSBiometricAuthenticationUsageDescription": "Use biometric authentication to quickly and securely access your account.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "icon": "./assets/ic_launcher.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/ic_launcher.png",
        "backgroundColor": "#4CAF50"
      },
      "package": "com.hoopay.wallet",
      "googleServicesFile": "./google-services.json",
      "versionCode": 22,
      "compileSdkVersion": 35,
      "targetSdkVersion": 35,
      "minSdkVersion": 24,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/ic_launcher.png"
    },
    "plugins": [
      "expo-local-authentication",
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ],
      "expo-image-picker",
      "expo-media-library"
    ],
    "extra": {
      "eas": {
        "projectId": "463b0040-9a26-4fb0-b5f2-ca7a58756170"
      }
    }
  }
}
