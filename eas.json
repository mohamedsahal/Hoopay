{
  "cli": {
    "version": ">= 16.6.2",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "image": "latest",
        "gradleCommand": ":app:assembleDebug"
      },
      "ios": {
        "simulator": true,
        "image": "latest"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "image": "latest",
        "gradleCommand": ":app:assembleRelease"
      },
      "ios": {
        "simulator": false,
        "image": "latest"
      }
    },
    "production": {
      "node": "20.11.1",
      "env": {
        "NODE_ENV": "production"
      },
      "android": {
        "buildType": "app-bundle",
        "image": "latest",
        "gradleCommand": ":app:bundleRelease"
      },
      "ios": {
        "simulator": false,
        "image": "latest"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
